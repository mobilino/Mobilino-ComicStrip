<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id = "de.mobilino.comicStrip"
version = "0.9.1">

<name>Comic Strip</name>

<description>
Read your favorite daily comic strip. 
</description>

<author href="http://www.mobilino.de">
Christof Lange
</author>

<!-- iPhone / iPod Touch  -->
    <icon src="img/icon_ios_57.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icon_ios_60.png" gap:platform="ios" width="60" height="60" />
    <icon src="img/icon_ios_120.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="img/icon_ios_72.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/icon_ios_76.png" gap:platform="ios" width="76" height="76" />
    <icon src="img/icon_ios_152.png" gap:platform="ios" width="152" height="152" />
    <icon src="img/icon_ios_167.png" gap:platform="ios" width="167" height="167" />

    <!-- Settings Icon -->
    <icon src="img/icon_ios_29.png" gap:platform="ios" width="29" height="29" />
    <icon src="img/icon_ios_58.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="img/icon_ios_40.png" gap:platform="ios" width="40" height="40" />
    <icon src="img/icon_ios_80.png" gap:platform="ios" width="80" height="80" />

<!-- Android -->
    <!--sizes see http://developer.android.com/design/style/iconography.html-->
    <icon src="img/icon_36.png" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="img/icon_48.png" gap:platform="android" gap:qualifier="mdpi" /> <!--baseline-->
    <icon src="img/icon_72.png" gap:platform="android" gap:qualifier="hdpi" /> <!--1.5-->
    <icon src="img/icon_96.png" gap:platform="android" gap:qualifier="xhdpi" /> <!--2-->
    <icon src="img/icon_144.png" gap:platform="android" gap:qualifier="xxhdpi" /> <!--3-->
    <icon src="img/icon_192.png" gap:platform="android" gap:qualifier="xxxhdpi" /> <!--4-->
    
<gap:platform name="ios" />

<feature name="http://api.phonegap.com/1.0/network"/>
<gap:plugin name="cordova-plugin-whitelist" source="npm"/>
<access origin="*" />

<preference name="orientation" value="portrait" />

</widget>