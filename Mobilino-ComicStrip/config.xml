<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id = "de.mobilino.comicStrip"
version = "0.9.1">

<name>Comic Strip</name>

<description>
Read your favorite daily comic strip. 
</description>

<author href="http://www.mobilino.de">
Christof Lange
</author>

<!-- iPhone / iPod Touch  -->
