<gap:splash src="img/splash_150.9.png" gap:platform="android" />
<gap:splash src="img/splash_150.9.png" gap:platform="android" gap:qualifier="ldpi" />
<gap:splash src="img/splash_150.9.png" gap:platform="android" gap:qualifier="mdpi" />
<gap:splash src="img/splash_150.9.png" gap:platform="android" gap:qualifier="hdpi" />
